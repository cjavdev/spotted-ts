{
  "dxt_version": "0.2",
  "name": "spotted-ts-mcp",
  "version": "0.4.1",
  "description": "The official MCP Server for the Spotted API",
  "author": {
    "name": "Spotted",
    "email": "wave@cjav.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cjavdev/spotted-ts.git"
  },
  "homepage": "https://github.com/cjavdev/spotted-ts/tree/main/packages/mcp-server#readme",
  "documentation": "https://spotted.stldocs.com",
  "server": {
    "type": "node",
    "entry_point": "index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "SPOTIFY_CLIENT_ID": "${user_config.SPOTIFY_CLIENT_ID}",
        "SPOTIFY_CLIENT_SECRET": "${user_config.SPOTIFY_CLIENT_SECRET}",
        "SPOTIFY_ACCESS_TOKEN": "${user_config.SPOTIFY_ACCESS_TOKEN}"
      }
    }
  },
  "user_config": {
    "SPOTIFY_CLIENT_ID": {
      "title": "client_id",
      "description": "",
      "required": false,
      "type": "string"
    },
    "SPOTIFY_CLIENT_SECRET": {
      "title": "client_secret",
      "description": "",
      "required": false,
      "type": "string"
    },
    "SPOTIFY_ACCESS_TOKEN": {
      "title": "access_token",
      "description": "",
      "required": false,
      "type": "string"
    }
  },
  "tools": [],
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
